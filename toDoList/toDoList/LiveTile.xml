<?xml version="1.0" encoding="utf-8" ?><tile>  <visual branding="name" displayName="TodoList">        <binding template="TileSmall">      <image src="Assets/background.jpg" placement="background"/>      <group>        <subgroup hint-weight="1">          <text hint-align="left">{0}</text>          <text hint-align="left">{1}</text>        </subgroup>      </group>    </binding>        <binding template="TileMedium">      <image src="Assets/background.jpg" placement="background"/>      <group>        <subgroup hint-weight="1">          <text hint-align="left" hint-style="subtitle">{0}</text>          <text hint-align="left" hint-style="body">{1}</text>        </subgroup>      </group>    </binding>    <binding template="TileWide">      <image src="Assets/background.jpg" placement="background"/>      <group>        <subgroup hint-weight="1">          <text hint-align="left" hint-style="title">{0}</text>          <text hint-align="left" hint-style="body">{1}</text>        </subgroup>      </group>    </binding>    <binding template="TileLarge">      <image src="Assets/background.jpg" placement="background"/>      <group>        <subgroup hint-weight="1">          <text hint-align="left" hint-style="title">{0}</text>          <text hint-align="left" hint-style="body">{1}</text>        </subgroup>      </group>    </binding>      </visual></tile>